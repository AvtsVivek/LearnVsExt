<UserControl x:Class="SpanTrackingModeIntro.SpanTrackingModeToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="900"
             Name="MyToolWindow">
    <UserControl.Resources>
        <Style TargetType="{x:Type Control}" x:Key="baseStyle">
            <Setter Property="FontSize" Value="20" />
        </Style>
        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource baseStyle}"></Style>
        <Style TargetType="{x:Type Label}" BasedOn="{StaticResource baseStyle}"></Style>
        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource baseStyle}"></Style>
        <Style TargetType="{x:Type ListView}" BasedOn="{StaticResource baseStyle}"></Style>
        <!-- ComboBox, RadioButton, CheckBox, etc... -->
        <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource baseStyle}"></Style>

    </UserControl.Resources>
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Button Grid.Row="0" Name="buttonProcessTextEdgeExclusive" Content="Process Text: EdgeExclusive " Margin="5" Click="buttonProcessTextEdgeExclusive_Click" />
        <Button Grid.Row="1" Name="buttonProcessTextEdgeInclusive" Content="Process Text: EdgeInclusive " Margin="5" Click="buttonProcessTextEdgeInclusive_Click" />
        <Button Grid.Row="2" Name="buttonProcessTextEdgePositive" Content="Process Text: EdgePositive " Margin="5" Click="buttonProcessTextEdgePositive_Click" />
        <Button Grid.Row="3" Name="buttonProcessTextEdgeNegative" Content="Process Text: EdgeNegative " Margin="5" Click="buttonProcessTextEdgeNegative_Click" />

        <TextBlock Grid.Row="4" Margin="5" Grid.Column="0" Name="caretLineTextBlock" HorizontalAlignment="Left"></TextBlock>
        <TextBlock Grid.Row="5" Margin="5" Grid.Column="0" Name="caretSpanTextBlock" HorizontalAlignment="Left"></TextBlock>
        <TextBlock Grid.Row="6" Margin="5" Grid.Column="0" Name="caretLengthTextBlock" HorizontalAlignment="Left"></TextBlock>
        <TextBlock Grid.Row="7" Margin="5" Grid.Column="0" Name="caretLineNumberTextBlock" HorizontalAlignment="Left"></TextBlock>
        <TextBlock Grid.Row="8" Margin="5" Grid.Column="0" Name="trackingSpanTextTextBlock" HorizontalAlignment="Left"></TextBlock>
        <TextBlock Grid.Row="9" Margin="5" Grid.Column="0" Name="trackingSpanSpanTextBlock" HorizontalAlignment="Left"></TextBlock>
        <TextBlock Grid.Row="10" Margin="5" Grid.Column="0" Name="trackingSpanStartTextBlock" HorizontalAlignment="Left"></TextBlock>
        <TextBlock Grid.Row="11" Margin="5" Grid.Column="0" Name="trackingSpanEndTextBlock" HorizontalAlignment="Left"></TextBlock>
    </Grid>

</UserControl>
